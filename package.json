{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && pnpm format",
    "lint:fix": "next lint --fix && pnpm format:fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write . --log-level warn",
    "test": "pnpm test:unit && pnpm test:integration && pnpm test:visual-regression",
    "test:unit": "jest --coverage",
    "test:integration": "docker compose run --rm playwright sh -c 'npm install -g pnpm && pnpm install && pnpm test:integration:ci -- \"$@\"' --",
    "test:integration:ci": "playwright test --grep-invert 'visual regression'",
    "test:visual-regression": "docker compose run --rm playwright sh -c 'npm install -g pnpm && pnpm install && pnpm test:visual-regression:ci'",
    "test:visual-regression:ci": "playwright test --grep='visual regression'",
    "test:visual-regression:fix": "docker compose run --rm playwright sh -c 'npm install -g pnpm && pnpm install && pnpm test:visual-regression:ci --update-snapshots'"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^16.1.3",
    "@contentful/rich-text-types": "^17.2.2",
    "@contentful/vercel-nextjs-toolkit": "^1.6.0",
    "@devicon/react": "^0.0.3",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "contentful": "^11.7.16",
    "cookies-next": "^6.1.0",
    "devicon": "^2.17.0",
    "flag-icons": "^7.5.0",
    "lucide-react": "^0.542.0",
    "next": "15.4.5",
    "next-intl": "^4.3.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@msw/playwright": "^0.4.2",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "deepmerge": "^4.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "msw": "^2.11.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
